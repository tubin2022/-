    width: 85px;
    height: 40px;
    text-align: center;
    line-height: 40px;
    font-size: 25px;
    font-family:Verdana, Geneva, Tahoma, sans-serif;
    text-shadow: 0 -1px 0 rgb(166, 224, 31);
    background-image: linear-gradient(#D3959B,#BFE6BA);
}
.nameAndPassword{
    margin-top: 10px;
}
.form_2{
