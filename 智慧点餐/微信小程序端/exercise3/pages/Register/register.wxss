.step{
    margin-top: 50px;
}
.form_1{
    position: absolute;
    margin-top: 90px;
    margin-left: 5%;
    width: 90%;
    height: 160px;
    text-align: center;
    background-color: white;
    border: 1px solid;
    border-radius: 10px;
    box-shadow: 5px 5px 10px black;
}
.identify{
    margin-top: 10px;
}
.code{
