/* pages/ProductList/productList.wxss */
.productList {
   position: fixed;
   overflow: hidden;
   top: 0;
   bottom: 0;
   left: 0;
   right: 0;
}

.productList .left {
   float: left;
   overflow: auto;
   height: 100%;
   width: 25%;
}

.productList .right {
    float: left;
    overflow: auto;
    width: 75%;
    height: 100%;
}
.desc{
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 3;
   overflow: hidden;
}
.title{
   font-weight: bold;
}