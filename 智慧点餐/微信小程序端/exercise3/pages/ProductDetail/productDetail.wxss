/* pages/ProductDetail/productDetail.wxss */
.productDetail .productImg{
    width: 100%;
    height: 250px;
    text-align: center;
    line-height: 250px;
}
.productDetail .productName{
    font-size: 22px;
    font-weight: bold;
    text-align: left;
}
.productDetail .productDesc{
    width: 90%;
    font-size: 15px;
    text-align: left;
    color: rgb(192, 189, 189);
}
.productDetail .productPrice{
    font-size: 22px;
    font-weight: bold;
    text-align: left;
    color: red;
}
.productDetail .activity .border{
    background-color: #FFF7F9;
    margin: 0 auto;
    width: 90%;
    border: 1px solid orange;
}
.productDetail .tabbar .button{
    display: flex;
    position: fixed;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    border: 1px solid rgb(224, 222, 222);
}
.left{
    width: 30%;
    height: 100%;
    text-align: center;
    line-height: 100rpx;
}
.right{
    float: right;
    width: 70%;
    height: 100%;
    background-color: powderblue;
    text-align: center;
    line-height: 100rpx;
}
.desc{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.activityTime{
    color: rgb(241, 1, 1);
    font-size: 15px;
    height: 30px;
}
.context{
    font-weight: bold;
    font-size: 15px;
    height: 30px;
}
.explain{
    font-size: 12px;
    color: rgb(165, 164, 164);
    height: 30px;
}