/* 主要导航页面 */
.colImage,.colText{
  display: flex; 
  justify-content: center; 
  align-items: center;
}
.colImage{
  margin-top: 5%;
}
.Div{
  background-color: 		#F0F0F0;
  width: 100%;
 
}
.cellGap{
  margin: 8rpx 0;
}
.amountBg{
    height: 130px;
    background-color: #51C4D3;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 5%;
  }
  .img{
    margin-left: 20px;
  }
  .account{
    width: 70%;
    color: #fff;
    margin-left: 10px;
  }
  .nav{
    width: 15px;
    color: #fff;
  }

  /*列表导航设计*/
  
  .item{
    background-color: #fff;
    display: flex;
    flex-direction: row;
    height: 50px;
    align-items: center;
  }
  .icon{
    width: 50px;
    text-align: center;
  }
  .itemName{
    width: 40%;
    font-size: 14px;
    font-weight: bold;
  }

  
  .remark{
    font-weight: normal;
    margin-top: 5px;
  }
  .right{
    width: 40%;
    text-align: right;
  }
  .opr{
    color: #5495e6;
    font-size: 13px;
    font-weight: bold;
    margin-right: 10px;
  }
  .btn{
    margin: 5%;
  }
   